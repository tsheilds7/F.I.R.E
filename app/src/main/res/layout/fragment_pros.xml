<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable

            name="FireVMPros"

            type="com.onethatsinspired.fire.viewmodels.FireViewModel" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayoutPodcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver"
    tools:context=".controllers.fragments.ProsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPros"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/layout_itemcard" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>